import Next from "../icons/Next.astro"
import Tailwind from "../icons/Tailwind.astro"
import Redux from "../icons/Redux.astro"
import MongoDB from "../icons/MongoDB.astro"
import Figma from "../icons/Figma.astro"
import PHP from "../icons/PHP.astro"
import Docker from "../icons/Docker.astro";


const SKILLS_ICONS: Record<string, any> = {
  HTML,
  CSS,
  JavaScript,
  TypeScript,
  React,
  Node,
  MySQL,
  Git,
  GitHub,
  Next,
  Tailwind,
  Redux,
  MongoDB,
  Figma,
  PHP,
  Docker
}
const skills = [
    {
      "name": "HTML",
      "keywords": [
        "Desarrollo Web", "Frontend"
      ]
    },
    {
      "name": "CSS",
      "keywords": [
        "Desarrollo Web", "Frontend", "Diseño Responsive"
      ]
    },
    {
      "name": "JavaScript",
      "keywords": [
        "Desarrollo Web", "Frontend", "Backend", "Fullstack"
      ]
    },
    {
      "name": "Tailwind",
      "keywords": [
        "Desarrollo Web", "Frontend", "CSS Framework", "Diseño Responsive"
      ]
    },
    {
      "name": "TypeScript",
      "keywords": [
        "Desarrollo Web", "Frontend", "Backend", "JavaScript Superset"
      ]
    },
    {
      "name": "Node",
      "keywords": [
        "Desarrollo Web", "Backend", "JavaScript", "Servidor"
      ]
    },
    {
      "name": "MySQL",
      "keywords": [
        "Bases de Datos", "SQL", "Almacenamiento de Datos", "Backend"
      ]
    },
    {
